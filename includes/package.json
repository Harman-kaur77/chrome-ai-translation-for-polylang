{
  "name": "chrome-ai-translation-for-polylang",
  "version": "1.1.0",
  "description": "You can easily create translated post using Automatic Translation For Polylang plugin & translate blocks",
  "main": "index.js",
  "scripts": {
    "build:at": "wp-scripts build src/automatic-translate/index.js --output-path=../assets/automatic-translate/",
    "start:at": "wp-scripts start src/automatic-translate/index.js --output-path=../assets/automatic-translate/",
    "build:inline-translate": "webpack --mode production --env inlineTranslate=true",
    "start:inline-translate": "webpack --mode development --env inlineTranslate=true --watch"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "Polylang",
    "Automatic Translation",
    "Duplicate Content",
    "Polylang addon"
  ],
  "license": "ISC",
  "dependencies": {
    "@wordpress/block-editor": "^14.9.0",
    "@wordpress/components": "^29.0.0",
    "@wordpress/edit-post": "^8.11.0",
    "@wordpress/element": "^6.14.0",
    "@wordpress/i18n": "^5.11.0",
    "@wordpress/interactivity": "^6.12.0",
    "@wordpress/plugins": "^7.11.0",
    "@wordpress/rich-text": "^7.14.0",
    "@wordpress/scripts": "^30.5.0",
    "dompurify": "^3.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-loading-skeleton": "^3.5.0",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.24.6",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "18.11.18",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/tinymce": "4.6.5",
    "@types/wordpress__edit-post": "^8.4.0",
    "@wordpress/browserslist-config": "^6.0.0",
    "@wordpress/scripts": "^28.0.0",
    "ajv": "^7.2.4",
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.23.0",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.1.1",
    "style-loader": "^4.0.0",
    "ts-loader": "9.4.2",
    "typescript": "^5.6.3"
  }
}
